generator client {
  provider  = "prisma-client-py"
  interface = "asyncio"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Achievement {
  id              String   @id @default(uuid())
  operatorId      String
  achievementType String
  timestamp       DateTime
}

model Camera {
  id          String  @id @default(uuid())
  name        String
  liveUrl     String
  geo         String
  description String?
  location    Bytes
}

model Effectiveness {
  id                 String @id @default(uuid())
  measureId          String
  before             Json
  after              Json
  effectivenessScore Float
}

model EnvironmentalData {
  id            String   @id @default(uuid())
  timestamp     DateTime
  location      Bytes
  emissionLevel Float
}

model Event {
  id          String   @id @default(uuid())
  name        String
  date        DateTime
  location    Bytes
  impactLevel Int
}

model Forecast {
  id               String   @id @default(uuid())
  timestamp        DateTime
  location         Bytes
  predictedDensity Int?
  predictedSpeed   Float?
}

model Incident {
  id          String   @id @default(uuid())
  description String
  severity    Int
  timestamp   DateTime
  location    String?
}

model Notification {
  id        String   @id @default(uuid())
  timestamp DateTime
  driverId  String?
  message   String
}

model Scenario {
  id               String  @id @default(uuid())
  name             String
  description      String?
  impactAssessment Json
}

model SocialReport {
  id        String   @id @default(uuid())
  timestamp DateTime
  location  Bytes
  content   String
  source    String
}

model TrafficData {
  id        String   @id @default(uuid())
  timestamp DateTime
  location  Bytes
  density   Int
  speed     Float
}

model TrafficLight {
  id                 String   @id @default(uuid())
  location           Bytes
  currentState       String
  redStateDuration   Int
  greenStateDuration Int
  recommendedState   String?
  createdAt          DateTime
}
